{
    "settings": {
        "number_of_shards": 1
    },
    "mappings": {
        "dynamic": "strict",
        "properties": {
            "id": {
                "type": "keyword"
            },
            "title": {
                "type": "text"
            },
            "is_published": {
                "type": "boolean"
            },
            "comments": {
                "type": "nested",
                "properties": {
                    "body": {
                        "type": "text"
                    },
                    "created_at": {
                        "type": "date",
                        "format": "strict_date_optional_time||epoch_millis"
                    }
                }
            },
            "likes": {
                "type": "integer"
            },
            "published_at": {
                "type": "date",
                "format": "strict_date_optional_time||epoch_millis"
            }
        }
    }
}